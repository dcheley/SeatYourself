<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

    <title>Seat Yourself</title>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p id="alert"><%= flash[:alert] %></p>
    <% end %>
    <header>
      <% if current_user %>
        Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <div class="btn btn-alt"><%= link_to "Sign up", new_user_path %></div><div class="btn btn-alt"><%= link_to "Log in", new_session_path %></div>
      <% end %>

      <a class = "nav_item" href='/restaurants'>Restaurants</a>
      <% if current_user %>
      <%= link_to "Profile", "/users/#{session[:user_id]}" %>
      <% end %>


      <div class="logo_style">
      <a href="/"><%= image_tag "seatyourself.png", :class => "logo" %></a>
      </div>


      <div class="white_bar"></div>

    </header>
    <%= yield %>
    <footer>
      <div class="open_space"></div>
    </footer>
  </body>
</html>
