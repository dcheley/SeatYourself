
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>

    <div class="field">
      <% f.label :name %><br/>
      <%= f.text_field :name, placeholder: "Enter your name here" %>
    </div>

    <div class="field">
      <% f.label :email %><br/>
      <%= f.text_field :email, placeholder: "Enter your email here" %>
    </div>

    <div class="field">
      <% f.label :phone %><br/>
      <%= f.text_field :phone, placeholder: "Your phone number, can I have it?" %>
    </div>

    <div class="field">
      <% f.label :password %><br/>
      <%= f.password_field :password, placeholder: "Enter a password" %>
    </div>

    <div class="field">
      <% f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, placeholder: "What was that password again?" %>
    </div>

    <div class="submit">
      <%= submit_tag "Confirm" %>
    </div>
    <% end %>
